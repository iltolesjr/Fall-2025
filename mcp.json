{
  "mcpServers": {
    "fall2025-academic": {
      "command": "node",
      "args": [".mcp/server.js"],
      "env": {
        "REPO_PATH": ".",
        "ACADEMIC_MODE": "true"
      }
    },
    "filesystem": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-filesystem", "."],
      "env": {
        "ALLOWED_EXTENSIONS": ".md,.txt,.json,.yaml,.yml,.pdf,.docx"
      }
    },
    "git": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-git"],
      "env": {
        "GIT_REPO_PATH": "."
      }
    }
  }
}